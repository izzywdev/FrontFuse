{
  "name": "@fuzefront/website-backend",
  "version": "1.0.0",
  "description": "FuzeFront corporate website backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.2.0",
    "nodemailer": "^6.9.13",
    "zod": "^3.22.4",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "isolatedModules": true,
        "useESM": false
      }]
    }
  }
}