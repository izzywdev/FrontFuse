{
  "name": "frontfuse-platform",
  "version": "1.0.0",
  "description": "Microfrontend hosting platform with runtime Module Federation",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared",
    "sdk",
    "api-client",
    "task-manager-app"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "dev:backend": "turbo dev --filter=backend",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:task-manager": "turbo dev --filter=task-manager-app",
    "dev:all": "turbo dev --filter=backend --filter=frontend --filter=task-manager-app",
    "build:all": "turbo build",
    "build:frontend": "turbo build --filter=frontend",
    "build:backend": "turbo build --filter=backend",
    "build:shared": "turbo build --filter=shared",
    "build:sdk": "turbo build --filter=sdk",
    "build:api-client": "turbo build --filter=api-client",
    "build:task-manager": "turbo build --filter=task-manager-app",
    "test:all": "turbo test",
    "test:frontend": "turbo test --filter=frontend",
    "test:backend": "turbo test --filter=backend",
    "test:shared": "turbo test --filter=shared",
    "test:sdk": "turbo test --filter=sdk",
    "test:auth": "cd backend && npm run test:auth",
    "test:auth:production": "cd backend && npm run test:auth:production",
    "test:auth:live": "cd backend && npm run test:auth:live",
    "test:auth:coverage": "cd backend && npm run test:coverage",
    "test:backend:full": "bash scripts/run-backend-tests.sh",
    "test:backend:full:win": "powershell -ExecutionPolicy Bypass -File scripts/run-backend-tests.ps1",
    "type-check:all": "turbo type-check",
    "type-check:frontend": "turbo type-check --filter=frontend",
    "type-check:backend": "turbo type-check --filter=backend",
    "type-check:shared": "turbo type-check --filter=shared",
    "type-check:sdk": "turbo type-check --filter=sdk",
    "type-check:task-manager": "turbo type-check --filter=task-manager-app",
    "lint:all": "turbo lint",
    "lint:frontend": "turbo lint --filter=frontend",
    "lint:backend": "turbo lint --filter=backend",
    "lint:shared": "turbo lint --filter=shared",
    "lint:sdk": "turbo lint --filter=sdk",
    "lint:task-manager": "turbo lint --filter=task-manager-app",
    "migrate:backend": "cd backend && npm run migrate",
    "seed:backend": "cd backend && npm run seed",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "cleanup": "node scripts/cleanup.js",
    "postinstall": "turbo build --filter=shared --filter=sdk",
    "security": "npm run security:audit && npm run security:sbom",
    "security:audit": "npm audit --audit-level=high && npm run security:audit:workspaces",
    "security:audit:workspaces": "concurrently \"cd frontend && npm audit --audit-level=high\" \"cd backend && npm audit --audit-level=high\" \"cd shared && npm audit --audit-level=high\" \"cd sdk && npm audit --audit-level=high\" \"cd task-manager-app && npm audit --audit-level=high\"",
    "security:sbom": "cyclonedx-npm --output-file frontfuse-sbom.json && cyclonedx-npm --output-format xml --output-file frontfuse-sbom.xml",
    "security:fix": "npm audit fix && npm run security:fix:workspaces",
    "security:fix:workspaces": "concurrently \"cd frontend && npm audit fix\" \"cd backend && npm audit fix\" \"cd shared && npm audit fix\" \"cd sdk && npm audit fix\" \"cd task-manager-app && npm audit fix\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:status": "docker-compose -f docker-compose.prod.yml ps"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@cyclonedx/cyclonedx-npm": "^1.12.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "semantic-release": "^24.2.5",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.10.0"
  }
}
